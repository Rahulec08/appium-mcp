{
  "mcpServers": {
    "mobile-automation": {
      "name": "Mobile Automation (NPM)",
      "description": "Mobile testing tools using the MCP Appium Visual npm package",
      "command": "npx",
      "args": [
        "-y",
        "mcp-appium-visual",
        "--port",
        "7000",
        "--transport",
        "http"
      ],
      "env": {
        "MCP_SERVER_PORT": "7000",
        "MCP_SERVER_HOST": "localhost",
        "MCP_TRANSPORT_TYPE": "http",
        "MCP_LOG_LEVEL": "info"
      },
      "connectTo": {
        "host": "localhost",
        "port": 7000
      },
      "capabilities": {
        "mobile": {
          "version": "1.2.1",
          "description": "Mobile automation testing with Appium",
          "supportedDevices": ["Android", "iOS"]
        },
        "vision": {
          "version": "1.0.0",
          "description": "Visual analysis and recovery features",
          "supportedFeatures": ["OCR", "ImageComparison", "VisualRecovery"]
        }
      }
    }
  },
  "claude": {
    "model": "claude-3-opus-20240229"
  }
}
