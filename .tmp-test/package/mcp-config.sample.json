{
  "mcpServers": {
    "mcp-appium": {
      "command": "npx",
      "args": ["mcp-appium-visual@latest"],
      "options": {
        "appiumHost": "localhost",
        "appiumPort": 4723,
        "screenshotDir": "./test-screenshots",
        "logLevel": "info",
        "noReset": true
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "langchain": {
      "command": "npx",
      "args": ["langchain-mcp@latest"]
    }
  },
  "defaultServer": "mcp-appium"
}
