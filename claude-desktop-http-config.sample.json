{
  "mcpServers": {
    "mobile-automation": {
      "name": "Mobile Automation",
      "description": "Mobile testing tools for Android and iOS devices using Appium",
      "connectTo": {
        "host": "localhost",
        "port": 8080
      },
      "capabilities": {
        "mobile": {
          "version": "1.2.0",
          "description": "Mobile automation testing with Appium and visual recovery",
          "supportedDevices": ["Android", "iOS"]
        },
        "automation": {
          "features": [
            "screenshot",
            "tap",
            "swipe",
            "text-input",
            "visual-recovery"
          ]
        }
      },
      "documentationUrl": "https://github.com/rahulec08/mcp-appium"
    }
  }
}
